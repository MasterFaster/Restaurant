<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="277.0" prefWidth="305.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.peopleOperations.GetDelivererInfoController">
    <children>
        <HBox alignment="CENTER" prefHeight="36.0" prefWidth="305.0">
            <children>
                <Label alignment="CENTER" contentDisplay="TOP" text="First Name" />
                <TextField fx:id="firstNameField" alignment="CENTER" prefWidth="149.0" promptText="">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="37.0" prefWidth="305.0">
            <children>
                <Label text="Second Name" />
                <TextField fx:id="secondNameField" alignment="CENTER">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </TextField>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>
        <HBox alignment="CENTER" prefHeight="36.0" prefWidth="305.0">
            <children>
                <Label text="Pesel" />
                <TextField fx:id="peselField">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="35.0" prefWidth="305.0">
            <children>
                <Label text="Driving License" />
            <ListView fx:id="drivingLicenseList" prefHeight="200.0" prefWidth="200.0" />
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="305.0">
            <children>
                <Button fx:id="addDelivererBtn" mnemonicParsing="false" onAction="#addDeliverer" text="Add">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets right="30.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="cancelAddDelivererBtn" mnemonicParsing="false" onAction="#cancelAddingDeliverer" text="Cancel" />
            </children>
        </HBox>
    </children>
</VBox>
